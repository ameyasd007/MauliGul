<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="ameya.com.mauligul.activities.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <LinearLayout
        android:orientation="vertical"
        android:padding="10.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5.0dip">

            <android.support.v7.widget.CardView
                android:layout_gravity="center"
                android:id="@+id/btn_add_customer"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_margin="5.0dip"
                android:layout_weight="1.0"
                app:cardCornerRadius="1.0dip">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <android.support.v7.widget.AppCompatImageView
                        android:background="@color/orange_400"
                        android:padding="30.0dip"
                        android:layout_width="fill_parent"
                        android:layout_height="120.0dip"
                        android:tint="@color/white"
                        app:srcCompat="@drawable/ic_businessman" />

                    <TextView
                        android:textAppearance="?android:textAppearanceSmall"
                        android:textStyle="bold"
                        android:textColor="@color/grey_900"
                        android:gravity="center"
                        android:padding="10.0dip"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Add Customer"
                        android:textAllCaps="true" />

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_gravity="center"
                android:id="@+id/btn_bill"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_margin="5.0dip"
                android:layout_weight="1.0"
                app:cardCornerRadius="1.0dip">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
                    <android.support.v7.widget.AppCompatImageView
                        android:background="@color/cyan_600"
                        android:padding="30.0dip"
                        android:layout_width="fill_parent"
                        android:layout_height="120.0dip"
                        android:tint="@color/white"
                        app:srcCompat="@drawable/ic_calender" />
                    <TextView android:textAppearance="?android:textAppearanceSmall"
                        android:textStyle="bold"
                        android:textColor="@color/grey_900"
                        android:gravity="center"
                        android:padding="10.0dip"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Bill"
                        android:textAllCaps="true" />

                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5.0dip">

            <android.support.v7.widget.CardView
                android:layout_gravity="center"
                android:id="@+id/btn_add_item"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_margin="5.0dip"
                android:layout_weight="1.0"
                app:cardCornerRadius="1.0dip">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <android.support.v7.widget.AppCompatImageView
                        android:background="@color/orange_400"
                        android:padding="30.0dip"
                        android:layout_width="fill_parent"
                        android:layout_height="120.0dip"
                        android:tint="@color/white"
                        app:srcCompat="@drawable/ic_businessman" />

                    <TextView
                        android:textAppearance="?android:textAppearanceSmall"
                        android:textStyle="bold"
                        android:textColor="@color/grey_900"
                        android:gravity="center"
                        android:padding="10.0dip"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Add Item"
                        android:textAllCaps="true" />

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_gravity="center"
                android:id="@+id/btn_about_us"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_margin="5.0dip"
                android:layout_weight="1.0"
                app:cardCornerRadius="1.0dip">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
                    <android.support.v7.widget.AppCompatImageView
                        android:background="@color/cyan_600"
                        android:padding="30.0dip"
                        android:layout_width="fill_parent"
                        android:layout_height="120.0dip"
                        android:tint="@color/white"
                        app:srcCompat="@drawable/ic_calender" />
                    <TextView android:textAppearance="?android:textAppearanceSmall"
                        android:textStyle="bold"
                        android:textColor="@color/grey_900"
                        android:gravity="center"
                        android:padding="10.0dip"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textAllCaps="true" />

                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5.0dip">

            <android.support.v7.widget.CardView
                android:layout_gravity="center"
                android:id="@+id/btn_all_member"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_margin="5.0dip"
                android:layout_weight="1.0"
                app:cardCornerRadius="1.0dip">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <android.support.v7.widget.AppCompatImageView
                        android:background="@color/deep_purple_300"
                        android:padding="30.0dip"
                        android:layout_width="fill_parent"
                        android:layout_height="120.0dip"
                        android:tint="@color/white"
                        app:srcCompat="@drawable/ic_contact_us_color" />

                    <TextView
                        android:textAppearance="?android:textAppearanceSmall"
                        android:textStyle="bold"
                        android:textColor="@color/grey_900"
                        android:gravity="center"
                        android:id="@+id/textView2"
                        android:padding="10.0dip"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Member"
                        android:textAllCaps="true" />

                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
